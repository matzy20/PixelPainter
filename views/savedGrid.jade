html
  head
    link(href='/css/PixelPainter.css', rel='stylesheet', media='screen')
  body
    h1 PaintingsById
      #pixelPainter

    p Artist: #{artist}

    p Title: #{title}
    //-   FUTURE REF: syntax on accessing array in jade p=colors[0]
    - var idIterator = 0
    div.canvasContainer
      - for (var i = 0; i < 3; i++){
          div
            - for (var j = 0; j < 3; j++){
              //since idIterator is 1-9 and colors array is 0-8
              //need the idIterator-1 to make them both speak
              //note the html 'inline style' syntax
              //painting = just ONE index of the array
              - idIterator++
                div.canvasCell(id='#{idIterator}' style='background-color:#{painting[idIterator-1]}')
              -}
        -}

    script(type='text/javascript', src='http://code.jquery.com/jquery-1.10.2.min.js')
    script(src='/js/PixelPainter.js')